# ============================================
# Environment Variables Template
# ============================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local or any .env files with real secrets

# ——— CUSTOMER APP KEYS ———
VITE_CUSTOMER_SUPABASE_URL=your_customer_supabase_url_here
VITE_CUSTOMER_SUPABASE_ANON_KEY=your_customer_supabase_anon_key_here
VITE_CUSTOMER_GOOGLE_MAPS_API_KEY=your_customer_google_maps_api_key_here

# ——— RUNNER APP KEYS ———
VITE_RUNNER_SUPABASE_URL=your_runner_supabase_url_here
VITE_RUNNER_SUPABASE_ANON_KEY=your_runner_supabase_anon_key_here
VITE_RUNNER_GOOGLE_MAPS_API_KEY=your_runner_google_maps_api_key_here

# ——— ADMIN WEB KEYS ———
VITE_ADMIN_SUPABASE_URL=your_admin_supabase_url_here
VITE_ADMIN_SUPABASE_ANON_KEY=your_admin_supabase_anon_key_here
VITE_ADMIN_GOOGLE_MAPS_API_KEY=your_admin_google_maps_api_key_here

# ——— SHARED MAPBOX ———
VITE_MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here

# ——— PLAID CONFIGURATION ———
# Plaid API credentials for bank account linking and verification
PLAID_CLIENT_ID=your_plaid_client_id_here
PLAID_SECRET=your_plaid_secret_here
# Plaid environment: sandbox, development, or production
PLAID_ENV=sandbox
# Plaid public key (for Link frontend integration)
PLAID_PUBLIC_KEY=your_plaid_public_key_here
# Optional: Environment-specific secrets (if using separate secrets per environment)
# PLAID_SECRET_SANDBOX=your_plaid_sandbox_secret_here
# PLAID_SECRET_DEVELOPMENT=your_plaid_development_secret_here
# PLAID_SECRET_PRODUCTION=your_plaid_production_secret_here

# ——— MARQETA CONFIGURATION ———
# Marqeta API credentials for card issuance and funding
MARQETA_APPLICATION_TOKEN=your_marqeta_application_token_here
MARQETA_ACCESS_TOKEN=your_marqeta_access_token_here
# Marqeta API base URL (sandbox or production)
MARQETA_BASE_URL=https://sandbox-api.marqeta.com/v3
# Optional: Marqeta program token (if using program-specific tokens)
# MARQETA_PROGRAM_TOKEN=your_marqeta_program_token_here
